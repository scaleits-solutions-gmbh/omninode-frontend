{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "__COMMENT__: Build Configuration",
        "NODE_AUTH_TOKEN",

        "__COMMENT__: Environment Configuration",
        "NEXT_PUBLIC_STAGE",

        "__COMMENT__: Omninode API Configuration",
        "OMNINODE_API_URL",
        "OMNINODE_API_KEY",
        
        "__COMMENT__: OIDC Configuration",
        "OIDC_CLIENT_ID",
        "OIDC_CLIENT_SECRET",
        "OIDC_ISSUER",
        
        "__COMMENT__: NextAuth Configuration",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
